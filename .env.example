# Database (Neon.tech PostgreSQL)
# Use pooled connection URL for serverless environments
DATABASE_URL="postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/jobly?sslmode=require&pgbouncer=true"

# Direct connection URL for migrations (bypasses connection pooler)
DIRECT_DATABASE_URL="postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/jobly?sslmode=require"

# Admin credentials (REQUIRED for production - change these!)
ADMIN_USERNAME="joblyadmin"
ADMIN_PASSWORD="your-secure-password-here"

# JWT/Token secret (REQUIRED for production - use a long random string)
JWT_SECRET="generate-a-long-random-string-for-production"

# Site URL (for SEO and links)
NEXT_PUBLIC_SITE_URL="https://jobly.ph"

# Node environment
NODE_ENV="development"

# Super Admin credentials (REQUIRED for production - change these!)
SUPERADMIN_EMAIL="superadmin@jobly.com"
SUPERADMIN_PASSWORD="your-secure-superadmin-password"
SUPERADMIN_NAME="Super Admin"
