# ===========================================
# Jobly Environment Configuration
# ===========================================

# Database (Neon.tech PostgreSQL)
# Use pooled connection URL for serverless environments
DATABASE_URL="postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/jobly?sslmode=require&pgbouncer=true"

# Direct connection URL for migrations (bypasses connection pooler)
DIRECT_DATABASE_URL="postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/jobly?sslmode=require"

# ===========================================
# Authentication
# ===========================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# OTP Salt for hashing
OTP_SALT="your-otp-salt-change-in-production"

# ===========================================
# SMS Provider (for OTP)
# ===========================================

# Semaphore SMS (Philippines)
# SEMAPHORE_API_KEY="your-semaphore-api-key"
# SEMAPHORE_SENDER_NAME="JOBLY"

# Or Twilio
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# ===========================================
# File Storage (for CVs, photos)
# ===========================================

# Cloudflare R2 or AWS S3
# S3_ACCESS_KEY_ID="your-access-key"
# S3_SECRET_ACCESS_KEY="your-secret-key"
# S3_BUCKET="jobly-uploads"
# S3_REGION="auto"
# S3_ENDPOINT="https://your-account.r2.cloudflarestorage.com"

# ===========================================
# Payment Provider
# ===========================================

# PayMongo (Philippines)
# PAYMONGO_PUBLIC_KEY="pk_test_..."
# PAYMONGO_SECRET_KEY="sk_test_..."

# ===========================================
# App Configuration
# ===========================================

NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"
